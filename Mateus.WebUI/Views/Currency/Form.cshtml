@model Mateus.Model.BussinesLogic.Views.CurrencyModel.CurrencyView

<div id="controls-bar">
    @Html.Partial("~/Views/Shared/Partial/Breadcrumb.cshtml")
    <div>
        @Html.ActionLink(" ", "Index", Session["ControllerReferrer"].ToString(), null, new { @class = "button back padding-right-0" })
        <a href="#" class="button refresh padding-right-0 margin-right-15"></a>       
        <input type="submit" class="button save" value="Spremi" />
    </div>
</div>

<div id="content">

    <div class="grid-5">
        <div class="form">

            <h2>Informacije o valuti</h2>
                
            <fieldset>

                <div class="row">
                    <label for="Name">Naziv:<b>*</b><span>moimo upišite naziv valute</span></label>
                    <div class="input">@Html.TextBoxFor(currency => currency.Name, new { @class = "w100" })</div>
                    <div class="error">@Html.ValidationMessageFor(currency => currency.Name)</div>
                    <div class="clear"></div>
                </div>

                <div class="row">
                    <label for="Sign">Simbol:<b>*</b><span>molimo upišite simbol valute</span></label>
                    <div class="input">@Html.TextBoxFor(currency => currency.Sign, new { @class = "w10" })</div>
                    <div class="error">@Html.ValidationMessageFor(currency => currency.Sign)</div>
                    <div class="clear"></div>
                </div>

            </fieldset>

        </div>
    </div>

    <div class="clear"></div>

</div>  
