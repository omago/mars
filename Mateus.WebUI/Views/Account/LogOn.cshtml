@model Mateus.Model.Account.LogOn

@{
    Layout = "~/Views/Shared/Template/" + PITFramework.Support.LayoutHelper.GetTheme() + "/_Login.cshtml";
    
    string returnUrl = "";
    if (ViewContext.HttpContext.Request.UrlReferrer != null)
    {
        returnUrl = ViewContext.HttpContext.Request.UrlReferrer.PathAndQuery;
    } 
    else if(!String.IsNullOrWhiteSpace(Request["returnURL"])) 
    {
        returnUrl = Request["returnURL"];
    }
}

@Html.ValidationSummary(false, "Greška")

@using (Html.BeginForm("LogOn", "Account", new { returnUrl = returnUrl }))
{
    @Html.TextBoxFor(user => user.UserName, new { placeholder = "Korisničko ime" });                               
    @Html.PasswordFor(user => user.Password, new { placeholder = "Lozinka" });
    <input id="submit" type="submit" value="Prijava"/>
}